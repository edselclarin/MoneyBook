<Application x:Class="MoneyBook2.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:MoneyBook2"
             xmlns:views="clr-namespace:MoneyBook2.Views">
    <Application.Resources>
        <!-- Register your bootstrapper -->
        <local:Bootstrapper x:Key="Bootstrapper" />

        <!-- Converters -->
        <views:InverseBooleanConverter x:Key="InverseBooleanConverter"/>
        <views:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <views:DueStateTypesToForegroundConverter x:Key="DueStateTypesToForegroundConverter"/>
    </Application.Resources>
</Application>
